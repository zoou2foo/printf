#include <stdio.h>
#include <stdarg.h>
#include <string.h>

int     printf(const char *format, ...)
{
        va_list args;
        int done;
//added after. and it deals with the string and what to do. To force only printing string no2
        char *substring = strstr(format, "Jacob");
        if (substring != format) return 0;

//now that's the part that I need to understand
        va_start (args, format);
        done = vfprintf (stdout, format, args);
        va_end (args);
        
        return (done);
}

int main()
{
        printf("Something we don't want to say. \n");
        printf("Jacob says, \"hello World\"\n");
        return (0);
}
